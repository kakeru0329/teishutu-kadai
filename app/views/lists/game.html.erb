<div class="container my-5">
  <div class="row">
    <div class="col">
      <% @posts.each do |post| %>
        <div class="card mb-6">
          <div class="card-header">
            <p class="card-header-title">
              <%= link_to post.review_title, new_post_path %>
              <p class="text-right"><%= post.show_tag_name %></p>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>