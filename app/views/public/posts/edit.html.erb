<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>投稿編集</h1>

      <% if @post.errors.any? %>
        <h2><%= @post.errors.count %>errors prohibited this obj from being saved:</h2>
        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
      <%= form_with model: @post do |f| %>
        <div class="form_group">
          <label for="post_title">タイトル</label>
          <%= f.text_field :review_title, class: "form-control", value: @post.review_title %>
        </div>
        <div class="form_group">
          <label for="post_oipnion">レビュー</label>
          <%= f.text_area :background, class: "form-control",value: @post.background %>
        </div>
        <div class="form_group">
          <%= f.submit '編集', class: "btn btn-success" %>
        </div>
      <% end %>
      <div>
        <% if @post.customer == current_customer %>
          <%= link_to "削除", post_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>