
<h2 class="mt-3">新規投稿</h2>
  <%= form_with model: @post do |f| %>
  <h6>タイトル</h6>
    <%= f.text_field :review_title %>

  <h6>レビュー</h6>
  <div class="col-xs-10">
    <%= f.radio_button :background, checked: true %>
    <%= f.label :"友人に勧められたから"%>
  </div>
  <div class="col-xs-10">
    <%= f.radio_button :background, :transfer %>
    <%= f.label :"好きなジャンルだから"%>
  </div>
  <div class="col-xs-10">
    <%= f.radio_button :background, :transfer %>
    <%= f.label :"評価が高いから"%>
  </div>
  <div class="col-xs-10">
    <%= f.radio_button :background, :transfer %>
    <%= f.label :"過去作からのシリーズものだから"%>
  </div>
  <div class="col-xs-10">
    <%= f.radio_button :background, :transfer %>
    <%= f.label :"その他"%>
  </div>

  

    <%= f.text_area :background, class: "form-control" %>
  <%= f.submit '投稿', class: "btn btn-success" %>
  <% end %>