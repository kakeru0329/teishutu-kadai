<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="col-5 offset-5">
        <p>ようこそ、NEW GAME!</p>
      </div>
    </div>
  </div>
  <!-- 新着レビュー表示 -->
  <br>
  <h4 class="recommendation"><i class="fas fa-crown"></i> 新着レビュー <i class="fas fa-crown"></i></h4><br>
  <div class="row">
    <div class="col-md-8">
      <% @posts.each do |post| %>
            <div class="card mb-6">
              <div class="card-header">
                <p class="card-header-title">
                  <%= post.review_title %>
                  <%= post.show_tag_name %>
                </p>
              </div>
              <%# 星評価機能 %>
              <div class="card-content">
                <div class="content">
                  <div class="content average-score">
                    <div class="star-rating mb-2">
                      <div class="star-rating-back">★★★★★</div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer">
                <%= link_to post_path(post.id), class: "button card-footer-item" do %>
                  レビューを見る
                <% end %>
              </div>
            </div>
          <% end %>
    </div>
    <div class="col-md-4">
      <% if @customer != nil then%>
          <%= render 'lists/name', customer: @customer %>
        <% end %>

        <%= render 'lists/search', games: @games %>

    </div>
  </div>
</div>