<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="col-6 offset-3">
        <h2>新規会員登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

        <table>
          <tr>
            <th>氏名</th>
              <td>(姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"  %></td>
              <td>(名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <th>氏名(フリガナ)</th>
              <td>(セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "first_name" %></td>
              <td>(メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <th>郵便番号(ハイフン無し)</th>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <th>住所</th>
              <td><%= f.text_field :address, autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <th>電話番号</th>
              <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th>パスワード(６文字以上)</th>
            <td><%= f.password_field :password %></td>

          </tr>
          <tr>
            <th>パスワード(確認用)</th>
            <td><%= f.password_field :password_confirmation, autocomplete: "current-password" %></td>
          </tr>
        </table>
          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>

        <div>
          <h6>既に登録済の方</h6>
          <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
        </div>

      </div>
    </div>
  </div>
</div>